# Database
DATABASE_URL="file:./dev.db"

# Admin Secret (for admin-protected endpoints)
ADMIN_SECRET="bitcoin-sprint-admin-secret-2025-local-dev"

# Next.js Environment Configuration
NEXT_PUBLIC_API_URL=http://localhost:3002/api
GO_API_URL=http://localhost:8080
API_KEY=bitcoin-sprint-dev-key-2025

# Tier-based API Keys for secure entropy generation
BITCOIN_SPRINT_FREE_API_KEY=free-api-key-changeme
BITCOIN_SPRINT_PRO_API_KEY=pro-api-key-2025
BITCOIN_SPRINT_ENTERPRISE_API_KEY=enterprise-api-key-2025

# Backend Configuration
NEXT_PUBLIC_BACKEND_URL=http://127.0.0.1:8080
BACKEND_API_URL=http://127.0.0.1:8080

# Security Settings
NEXT_PUBLIC_ENABLE_HTTPS=false
NEXT_PUBLIC_API_TIMEOUT=30000

# Rate Limiting (client-side defaults)
NEXT_PUBLIC_RATE_LIMIT_FREE=10
NEXT_PUBLIC_RATE_LIMIT_PRO=100
NEXT_PUBLIC_RATE_LIMIT_ENTERPRISE=1000

# Bitcoin Sprint Configuration
BITCOIN_RPC_URL=http://localhost:18332
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASS=bitcoinpass123

# Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Redis Configuration (optional for development)
REDIS_URL=redis://localhost:6379

# Entropy Bridge Configuration
ENTROPY_BRIDGE_ENABLED=true
RUST_ENTROPY_FALLBACK=true

# Maintenance Mode (set to 'true' to enable)
MAINTENANCE_MODE=false
MAINTENANCE_REASON="Scheduled maintenance"
MAINTENANCE_STARTED_AT=""
MAINTENANCE_DURATION="2 hours"

# Storage Validation Configuration
NEXT_PUBLIC_STORAGE_VALIDATION_ENABLED=true
NEXT_PUBLIC_ENABLE_MERKLE_PROOFS=true
NEXT_PUBLIC_ENABLE_WEBHOOKS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enterprise Server Configuration
NEXT_PUBLIC_ENTERPRISE_API_URL=https://localhost:8443
STORAGE_VALIDATION_API_URL=https://localhost:8443/api/validate-storage

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=true
NEXT_PUBLIC_DEBUG=true

# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true

# Security Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
RATE_LIMIT_ENABLED=true
LOG_LEVEL=info

# Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_SENTRY_DSN=
