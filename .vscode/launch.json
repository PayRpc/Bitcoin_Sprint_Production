{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Bitcoin Sprint (Development)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sprintd",
            "env": {
                "GOMAXPROCS": "4",
                "CGO_ENABLED": "1",
                "RUST_BACKTRACE": "1"
            },
            "args": [],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Run Bitcoin Sprint (Release Mode)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/sprintd",
            "env": {
                "GOMAXPROCS": "4",
                "GO_RELEASE": "true",
                "CGO_ENABLED": "1",
                "RUST_BACKTRACE": "1"
            },
            "args": ["-tags", "nozmq"],
            "console": "integratedTerminal",
            "buildFlags": "-ldflags=-s -w -trimpath",
            "showLog": true
        },
        {
            "name": "Debug Bitcoin Sprint",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/sprintd",
            "env": {
                "CGO_ENABLED": "1",
                "RUST_BACKTRACE": "1"
            },
            "args": [],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showLog": true
        },
        {
            "name": "Build Optimized Binary (PowerShell)",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "${workspaceFolder}/build-optimized.ps1",
                "-Release"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Build Optimized Binary (Linux/macOS)",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "bash",
            "args": [
                "${workspaceFolder}/build-optimized.sh",
                "-Release"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
