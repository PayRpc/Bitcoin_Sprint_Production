{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Bitcoin Sprint (Development)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "env": {
                "GOMAXPROCS": "4"
            },
            "args": [],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Run Bitcoin Sprint (Release Mode)",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "env": {
                "GOMAXPROCS": "4",
                "GO_RELEASE": "true"
            },
            "args": [],
            "console": "integratedTerminal",
            "buildFlags": "-ldflags=-s -w -trimpath",
            "showLog": true
        },
        {
            "name": "Debug Bitcoin Sprint",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "main.go",
            "env": {},
            "args": [],
            "console": "integratedTerminal",
            "stopOnEntry": false,
            "showLog": true
        },
        {
            "name": "Build Optimized Binary",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "powershell.exe",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "./build-optimized.ps1",
                "-Release"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        }
    ]
}
