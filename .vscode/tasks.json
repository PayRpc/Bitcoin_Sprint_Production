{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Bitcoin Sprint (Optimized)",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-ldflags=-s -w -extldflags=-static",
				"-trimpath",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$go"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Build Release (Maximum Optimization)",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"./build-optimized.ps1",
				"-Release"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Build Development",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-race",
				"-o",
				"bitcoin-sprint-dev.exe",
				"./cmd/sprintd"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$go"
			]
		},
		{
			"label": "Clean Build Artifacts",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"Remove-Item -Path '*.exe', '*.log', 'debug' -ErrorAction SilentlyContinue; Write-Host 'Clean complete' -ForegroundColor Green"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Benchmark Build",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-ExecutionPolicy",
				"Bypass",
				"-File",
				"./build-optimized.ps1",
				"-Benchmark"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "Go Vet (Code Analysis)",
			"type": "shell",
			"command": "go",
			"args": [
				"vet",
				"./..."
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": [
				"$go"
			]
		},
		{
			"label": "Go Format",
			"type": "shell",
			"command": "gofmt",
			"args": [
				"-s",
				"-w",
				"."
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Install Go Tools",
			"type": "shell",
			"command": "go",
			"args": [
				"install",
				"golang.org/x/tools/gopls@latest",
				"honnef.co/go/tools/cmd/staticcheck@latest",
				"mvdan.cc/gofumpt@latest"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Run Go Benchmarks",
			"type": "shell",
			"command": "go",
			"args": [
				"test",
				"./...",
				"-bench",
				".",
				"-benchmem",
				"-run",
				"^$"
			],
			"group": "test",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared"
			},
			"problemMatcher": [
				"$go"
			]
		},
		{
			"label": "Build sprintd only",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-tags",
				"sprintd_exclude_bitcoin",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build"
		},
		{
			"label": "Build sprintd minimal",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-tags",
				"sprintd_exclude_bitcoin,sprintd_min",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build"
		},
		{
			"label": "Build sprintd minimal (no rpc/engine, exclude bitcoin relay)",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-tags",
				"sprintd_exclude_bitcoin,sprintd_min",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build"
		},
		{
			"label": "Build sprintd minimal (tags)",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-tags",
				"sprintd_exclude_bitcoin,sprintd_min",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build"
		},
		{
			"label": "Rebuild sprintd minimal (tags)",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-tags",
				"sprintd_exclude_bitcoin,sprintd_min",
				"-o",
				"bitcoin-sprint.exe",
				"./cmd/sprintd"
			],
			"problemMatcher": [
				"$go"
			],
			"group": "build"
		}
	]
}