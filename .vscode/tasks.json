{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üöÄ Build Bitcoin Sprint (Optimized)",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-ldflags=-s -w -extldflags=-static",
                "-trimpath",
                "-o", "bitcoin-sprint.exe",
                "."
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "‚ö° Build Release (Maximum Optimization)",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "./build-optimized.ps1",
                "-Release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "üîß Build Development",
            "type": "shell",
            "command": "go",
            "args": [
                "build",
                "-race",
                "-o", "bitcoin-sprint-dev.exe",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "üßπ Clean Build Artifacts",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Path '*.exe', '*.log', 'debug' -ErrorAction SilentlyContinue; Write-Host '‚úÖ Clean complete' -ForegroundColor Green"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üìä Benchmark Build",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", "Bypass",
                "-File", "./build-optimized.ps1",
                "-Benchmark"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "üîç Go Vet (Code Analysis)",
            "type": "shell",
            "command": "go",
            "args": ["vet", "./..."],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "üìù Go Format",
            "type": "shell",
            "command": "gofmt",
            "args": ["-s", "-w", "."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üîß Install Go Tools",
            "type": "shell",
            "command": "go",
            "args": [
                "install",
                "golang.org/x/tools/gopls@latest",
                "honnef.co/go/tools/cmd/staticcheck@latest",
                "mvdan.cc/gofumpt@latest"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "üèÅ Run Go Benchmarks",
            "type": "shell",
            "command": "go",
            "args": [
                "test", "./...", "-bench", ".", "-benchmem", "-run", "^$"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": ["$go"]
        }
    ]
}
