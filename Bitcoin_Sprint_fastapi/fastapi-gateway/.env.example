# FastAPI Gateway Configuration
# Copy this file to .env and update values for your environment

# API Settings
API_TITLE="Bitcoin Sprint API Gateway"
API_VERSION="1.0.0"
API_DESCRIPTION="Enterprise-grade API gateway for Bitcoin Sprint blockchain platform"

# Server Settings
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# Security Settings (CHANGE THESE IN PRODUCTION!)
SECRET_KEY="your-super-secret-key-change-this-in-production-32-chars-min"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Backend Settings
BACKEND_URL="http://localhost:8080"
BACKEND_TIMEOUT=30.0

# Redis Settings
REDIS_URL="redis://localhost:6379"
REDIS_POOL_SIZE=10

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "https://your-frontend-domain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Trusted Hosts (use specific domains in production)
TRUSTED_HOSTS=["*"]

# API Key Settings
API_KEY_HEADER="X-API-Key"
API_KEY_QUERY="api_key"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Database (if using for user management)
DATABASE_URL="postgresql://user:password@localhost:5432/bitcoin_sprint"

# External Services
REDIS_CACHE_URL="redis://localhost:6379/1"
REDIS_RATE_LIMIT_URL="redis://localhost:6379/2"
