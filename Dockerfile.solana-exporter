# Solana Metrics Exporter Dockerfile
FROM python:3.9-slim

# Install dependencies
RUN pip install aiohttp prometheus_client

# Copy the exporter script
COPY solana-metrics-exporter.py /app/solana-metrics-exporter.py

# Set working directory
WORKDIR /app

# Expose metrics port
EXPOSE 8080

# Run the exporter
CMD ["python", "solana-metrics-exporter.py"]
